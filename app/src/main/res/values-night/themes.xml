<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Houser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:windowBackground">@color/background</item>

        <!-- Primary color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- StatusBar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="pageTitle">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="sectionTitle" parent="pageTitle" >
        <item name="android:textSize">27sp</item>
    </style>

    <style name="itemTitle" parent="pageTitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="actionText">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="itemSubTitle">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="itemDate">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="bottomBar" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>