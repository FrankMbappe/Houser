<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- BASE THEME -->
    <style name="Theme.Houser" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowBackground">@color/background</item>

        <!-- Primary color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- StatusBar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="pageTitle">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="sectionTitle" parent="pageTitle" >
        <item name="android:textSize">27sp</item>
    </style>

    <style name="itemTitle" parent="pageTitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="itemDetailsText" parent="pageTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="actionText">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="itemSubTitle">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="itemDate">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="fieldLabel">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="fieldText">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="primaryButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="secondaryButton" parent="primaryButton">
        <item name="backgroundTint">@color/secondary</item>
    </style>

    <style name="buttonTitle">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="buttonSubTitle" parent="buttonTitle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bottomBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="tint">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="floatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
    </style>

</resources>